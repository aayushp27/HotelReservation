<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_homepage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/userHOMEtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:menu="@menu/topmenubar"

        android:background="@color/colorPrimary"
        android:padding="5dp">

    </androidx.appcompat.widget.Toolbar>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/UserHotelRecView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/userBottomNavigationView"
        android:layout_below="@+id/userHOMEtoolbar"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-56dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/userBottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/user_bottom_nav_menu"
        app:itemBackground="@color/menu"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>





